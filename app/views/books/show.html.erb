<% provide(:title, @book.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="book_info">
      <h1>
        <%= @book.title %>
      </h1>
      <% if current_user.book_owner?(@book) %>
        <%= link_to "delete", @book, method: :delete, date: {confirm: "You sure?"} %>
         | <%= link_to "edit", edit_book_path(@book) %><br>
      <% end %>
      <%= @book.content %>
      <ol class="chapters">
      <%= "[chapters]" %>
        <%= render @chapters %>
      </ol>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'registration_form' if logged_in? %>
    <% if @users.any? %>
    <h3>Reading users</h3>
     <ul class="users">
       <%= render @users %>
     </ul>
    <% end %>
  </div>
</div>
