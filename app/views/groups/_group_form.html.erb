<%= form_for @group do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :detail %>
  <%= f.text_field :detail, class: 'form-control' %>

  <%= f.submit "Make group", class: "btn btn-primary" %>
<% end %>
