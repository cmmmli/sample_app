<% provide(:title, @group.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="group_info">
      <h1>
        <%= @group.name %>
        <% if current_user.owner?(@group.id) || current_user.admin? %>
         | <%= link_to "delete", @group, method: :delete, date: {confirm: "You sure?"} %>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'join_form' if logged_in? %>
    <% if @group.users.any? %>
      <h3>Members (<%= @group.users.count %>)</h3>
      <ol class="users">
        <%= render @users %>
      </ol>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
