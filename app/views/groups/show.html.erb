<% provide(:title, @group.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="group_info">
      <h1>
        <%= @group.name %>
        <% if current_user.owner?(@group.id) || current_user.admin? %>
         | <%= link_to "delete", @group, method: :delete, date: {confirm: "You sure?"} %>
        <% end %>
      </h1>
      <% if @group.users.any? %>
        <%= link_to "#{@group.users.count} join users", members_group_path(@group), class: "members" %>
      <% end %>
    </section>
    <section class="comment_form">
      <%= render 'shared/comment_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'join_form' if logged_in? %>
    <h3>Comments</h3>
    <% if @group.group_users.find_by(user_id: current_user.id) %>
      <%= render 'shared/comments' %>
    <% else %>
      <p>グループに参加するとメンバーのコメントを閲覧できます。</p>
    <% end %>
  </div>
</div>
